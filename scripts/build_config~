#!/bin/bash

dir=include

# echo pwd  `pwd`

#------------------------------------------------------------------------------
# 'muminuseplus' and its subpackages, excluding Stntuple
#------------------------------------------------------------------------------
if [ ! -d ../$dir/muminuseplus ] ; then mkdir -p ../$dir/muminuseplus ; fi

for d in ana mod plot; do
    if [ ! -e ../$dir/muminuseplus/$d ] ; then 
	echo `pwd`$0 : creating symbolic link ../$dir/muminuseplus/$d
	ln -s ../../muminuseplus/$d/$d ../$dir/muminuseplus/$d
    fi
done

